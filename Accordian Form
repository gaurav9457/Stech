    }

    // ==========Employment==========
    function validateEmployment() {

let    Company=   document.getElementById("Company").value;
let   Location=  document.getElementById("Location").value;
let     jTitle=  document.getElementById("jTitle").value;
let Experience=document.getElementById("Experience").value;
 let    PCompany=   document.getElementById("PCompany").value;
 let   PLocation=  document.getElementById("PLocation").value;
 let     PjTitle=    document.getElementById("PjTitle").value;
 let PExperience=document.getElementById("PExperience").value;
 let PTechnology= document.getElementById("PTechnology").value;
 let hobbies= document.getElementById("hobbies").value;

 const letters = /^[A-Za-z\s]+$/;
 if(!Company.match(letters) && Company.value==null){
     alert("Company name is mandatory");
 }
 else if(!jTitle.match(letters) && jTitle.value==null){
     alert("Job Title is mandatory");
 }
 else if(!PCompany.match(letters) && PCompany.value==null){
     alert("Job Title is mandatory");
 }
 else if(!PjTitle.match(letters) && PjTitle.value==null){
     alert("Job Title is mandatory");
 }
 else if(!hobbies.match(letters) && hobbies.value==null){
     alert(" Hobbies is mandatory");
 }
 else{
   alert("Go for Assest Details");
   // Employment();
 }
 
}


    function Employment() {
      let employmentArray = localStorage.getItem('Employment') ? JSON.parse(localStorage.getItem('Employment')) : [];

      var employment = {
        Company: document.getElementById("Company").value,
        Location: document.getElementById("Location").value,
        jTitle: document.getElementById("jTitle").value,
        Experience: document.getElementById("Experience").value,

        PCompany: document.getElementById("PCompany").value,
        PLocation: document.getElementById("PLocation").value,
        PjTitle: document.getElementById("PjTitle").value,
        PExperience: document.getElementById("PExperience").value,
        PTechnology: document.getElementById("PTechnology").value
      }
      employmentArray.push(employment);
      localStorage.setItem('Employment', JSON.stringify(employmentArray));
      clearEmployment();

    }

    function clearEmployment() {
      document.getElementById("Company").value = "";
      document.getElementById("Location").value = "";
      document.getElementById("jTitle").value = "";
      // document.getElementById("Experience").value="";

      document.getElementById("PCompany").value = "";
      document.getElementById("PLocation").value = "";
      document.getElementById("PjTitle").value = "";
      // document.getElementById("PExperience").value="";
      document.getElementById("PTechnology").value = "";

    }

    // =======Assest==============
    function validateAssest() {
          // alert("Function");
          let hobbies= document.getElementById("hobbies").value;
          let  firstName= document.getElementById("Fname").value;

          const letters = /^[A-Za-z\s]+$/;
          // alert("Function");
          if(!hobbies.match(letters) && hobbies.value==null){
              alert(" Hobbies are mandatory");
          }
          else if(!firstName.match(letters) && firstName.value == null){
              alert("Please Fill Personal Details !!");
          }
          else{
            // alert("Function");
          submitForm();
          submitAccount();
          Family();
          Employment();
          Assest();
          alert("Form Submitted");
        }
        }

        function Assest() {
          let assestArray= localStorage.getItem('Assest')? JSON.parse(localStorage.getItem('Assest')):[];

          var assest={
            Bio: document.getElementById("Bio").value,
            hobbies: document.getElementById("hobbies").value
          }
          assestArray.push(assest);
          localStorage.setItem('Assest',JSON.stringify(assestArray));
          clearAssest()

        }


    function clearAssest() {
      document.getElementById("Bio").value = "";
      document.getElementById("hobbies").value = "";
    }

    
