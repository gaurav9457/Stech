    // var PArray=[];
    // ===========personal==============
    function personalValidate() {

      firstName = document.getElementById("Fname").value;
      lastName = document.getElementById("Lname").value;
      gender = document.getElementById("Gender").value;
      age = document.getElementById("Age").value;
      City = document.getElementById('City').value;
      Zip = document.getElementById('Zip').value;
      state = document.getElementById('State').value;
      Passout = document.getElementById('Passout').value;
      Marks = document.getElementById('Marks').value;
      field = document.getElementById('stream').value;
      let Bname = document.getElementById("Bname").value;

      const letters = /^[A-Za-z\s]+$/;
      const year = /\d{4}$/;

      if (!firstName.match(letters) && firstName.value == null) {
        alert("First Name is Required and not Contain numbers");
      }
      else if (!lastName.match(letters) && lastName.value == null) {
        alert("Last name is Required and not Contain numbers");

      }
      else if (!gender.match(letters) && gender.value == null) {
        alert("Gender Is Mandatory");

      }
      else if (!state.match(letters) && state.value == null) {
        alert("State Is Mandatory");

      }
      else if (Passout == "") {
        alert("Passout year canot empty")
      }
      else if (!Passout.match(year)) {
        alert("Enter year in 4 digit")
      }
      else if (!field.match(letters) && field.value == null) {
        alert("Stream Is Mandatory");

      }
      else if (!Bname.match(letters) && Bname.value == null) {
        alert("Bank Name Is Mandatory & not include number");

      }
      else {
        alert("Go for Account Details");
        // submitForm();
      }

    }


    function submitForm() {
      let personalDetails = localStorage.getItem('formData') ? JSON.parse(localStorage.getItem('formData')) : [];

      let StoredData = {
        firstName: document.getElementById("Fname").value,
        lastName: document.getElementById("Lname").value,
        gender: document.getElementById("Gender").value,
        age: document.getElementById("Age").value,
        City: document.getElementById('City').value,
        Zip: document.getElementById('Zip').value,
        state: document.getElementById('State').value,
        Passout: document.getElementById('Passout').value,
        Marks: document.getElementById('Marks').value,
        field: document.getElementById('stream').value
      }


      personalDetails.push(StoredData);
      // PArray.push(personalDetails);
      localStorage.setItem("formData", JSON.stringify(personalDetails));
      // localStorage.setItem("Aray",JSON.stringify(PArray));
      // document.getElementById("PForm").reset();
      // alert("Submitted");
      clearPersonal();

    }

    function clearPersonal() {
      document.getElementById("Fname").value = "";
      document.getElementById("Lname").value = "";
      // document.getElementById("Gender").value="";
      document.getElementById("Age").value = "";
      document.getElementById('City').value = "";
      document.getElementById('Zip').value = "";
      document.getElementById('State').value = "";
      document.getElementById('Passout').value = "";
      document.getElementById('Marks').value = "";
      document.getElementById('stream').value = "";

    }

    // ========Account============
    function accountvalidate() {
              let  Bname= document.getElementById("Bname").value;
              let  Branch= document.getElementById("Branch").value;
              let  Ifsc= document.getElementById("ifsc").value;
              let  accn= document.getElementById("accn").value;

              let  Emailr= document.getElementById("Emailr").value;
              
              let  mob= document.getElementById("mob").value;
              

              let  aadhar= document.getElementById("aadhar").value;
              let  pan= document.getElementById("pan").value;

             let fatherName= document.getElementById("Fathername").value;
           
              const letters = /^[A-Za-z\s]+$/;
              const emailValid=/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
              const count=/\d{10}$/;

            //    if(!Bname.match(letters) && Bname.value == null){
            //       alert("Bank Name Is Mandatory & not include number");

            //     }
                 if(Ifsc == ""){
                  alert("IFsc code Is Mandatory");

                }
                else if(!Emailr.match(emailValid) && Emailr.value == null){
                  alert("Email is mandatory");

                }
                else if(!mob.match(count)){
                  alert("Fill Proper Mobile Number");

                }
                else if(mob == ""){
                  alert("Mobile Number is Mandatory");

                }
                
                else if(aadhar == ""){
                  alert("Aadhar  Number is Mandatory");

                }
                else if(pan == ""){
                  alert("Pan Number is Mandatory");

                }
                else if(!fatherName.match(letters) && fatherName.value == null){
                  alert("fathers Name Is Mandatory & not include number");

                }
                else{
                  alert("Form Submitted");
                  // submitAccount();
                }

      }


    function submitAccount() {

      let accountArray = localStorage.getItem('Account') ? JSON.parse(localStorage.getItem('Account')) : [];

      let accountData = {
        Bname: document.getElementById("Bname").value,
        Branch: document.getElementById("Branch").value,
        Ifsc: document.getElementById("ifsc").value,
        accn: document.getElementById("accn").value,

        Emailr: document.getElementById("Emailr").value,
        EmailO: document.getElementById("Email").value,
        mob: document.getElementById("mob").value,
        tel: document.getElementById("tel").value,

        aadhar: document.getElementById("aadhar").value,
        pan: document.getElementById("pan").value

      }

      accountArray.push(accountData);
      localStorage.setItem("Account", JSON.stringify(accountArray));
      // reset();
      clearAccount();



    }

    function clearAccount() {
      document.getElementById("Bname").value = "";
      document.getElementById("Branch").value = "";
      document.getElementById("ifsc").value = "";
      document.getElementById("accn").value = "";
      document.getElementById("Emailr").value = "";
      document.getElementById("Email").value = "";
      document.getElementById("mob").value = "";
      document.getElementById("tel").value = "";
      document.getElementById("aadhar").value = "";
      document.getElementById("pan").value = "";

    }

    //==========Family===========
    function familyValidate() {
       let  fatherName= document.getElementById("Fathername").value;
        let    Company=   document.getElementById("Company").value;
        const letters = /^[A-Za-z\s]+$/;
         if(!fatherName.match(letters) && fatherName.value == null){
                  alert("fathers Name Is Mandatory & not include number");

                }
                else if(!Company.match(letters) && Company.value == null){
                      alert("Company Name is mandatory");
                }
                else{
                  alert("Go for Employment details");
                  // Family();
                }

        
       }


    function Family() {
      let familyArray = localStorage.getItem('Family') ? JSON.parse(localStorage.getItem('Family')) : [];

      var family = {
        fatherName: document.getElementById("Fathername").value,
        motherName: document.getElementById("Mothername").value,
        MaritalStatus: document.getElementById("MaritalStatus").value,
        spouseName: document.getElementById("Spouse").value,

        CCity: document.getElementById("CCity").value,
        CState: document.getElementById("CState").value,
        CZip: document.getElementById("CZip").value,

        PCity: document.getElementById("PCity").value,
        PState: document.getElementById("PState").value,
        PZip: document.getElementById("PZip").value

      }
      familyArray.push(family);
      localStorage.setItem("Family", JSON.stringify(familyArray));
      clearFamily();

    }

    function clearFamily() {

      document.getElementById("Fathername").value = "";
      document.getElementById("Mothername").value = "";
