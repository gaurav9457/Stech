      function getItem() {
        let personalData = localStorage.getItem("formData");
        let data = JSON.parse(personalData);
        //  console.log(data);
        //  console.log(data[1]);
        Tabledata(data);
      }
      getItem();

      function Tabledata(data) {
        let table =
          ' <table class="table table-striped table-hover mt-4 shadow p-3 mb-5 bg-body-tertiary rounded" id="myTable" >';
        table += `<thead class="table-success" >
                <tr >
                    
                    <th scope="col">First-Name</th>
                    <th scope="col">Last-Name</th>
                    <th scope="col">Gender</th>
                    
                    <th scope="col" >Action</th>

                </tr>
            </thead>`;
            // let tid=0;
        data.forEach((tRow, index) => {
          //tid++;
          table = table + `<tr>`;
          table = table + `<td> ${tRow.firstName}</td>`;
          table = table + `<td> ${tRow.lastName}</td>`;
          table = table + `<td> ${tRow.gender}</td>`;
         

          table =
            table +
            `<td><button class="btn btn-warning btn-sm" onclick="getdata(${index})"> view</button>
            <button class="btn btn-danger btn-sm" onclick=""> Delete</button></td>`;
          table += `</tr>`;
        });
        table += "</table>";
        document.getElementById("T-list").innerHTML = table;
      }

